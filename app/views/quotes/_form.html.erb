<%= form_for(@quote) do |f| %>
  <% if @quote.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@quote.errors.count, "error") %> prohibited this quote from being saved:</h2>

      <ul>
      <% @quote.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :tweet_id %><br>
    <%= f.number_field :tweet_id %>
  </div>
  <div class="field">
    <%= f.label :tweet_text %><br>
    <%= f.text_area :tweet_text %>
  </div>

  <h3>Tags</h3>
  <div id="tags">
    <%= f.fields_for :tags do |tag| %>
      <%= render 'tag_fields', f: tag %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'add tag', f, :tags %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
